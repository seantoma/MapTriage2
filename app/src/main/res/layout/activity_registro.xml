<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false"
    android:background="@drawable/tri"
    android:orientation="vertical">

    <TextView
        android:text="REGISTRO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="24sp"
        tools:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="serif" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:text="Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="18sp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtNombreInsc"
        android:background="@android:drawable/zoom_plate"
        android:textAlignment="center" />

    <TextView
        android:text="Correo Electronico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:textAlignment="center" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtUsuarioIngr"
        android:background="@android:drawable/zoom_plate"
        android:textAlignment="center" />

    <TextView
        android:text="ContraseÃ±a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="18sp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtContrasenaInsc"
        android:background="@android:drawable/zoom_plate"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtGuardadoInsc"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <Button
        android:text="Guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/bntGuardarInsc"

        android:onClick="cargarDatos"
        android:background="?android:attr/fingerprintAuthDrawable"
        android:layout_weight="0.65"
        android:textColor="@color/colorAccent"
        android:textCursorDrawable="@drawable/common_google_signin_btn_icon_light"
        android:textStyle="normal|bold"
        android:textSize="30sp" />


</LinearLayout>