<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fliatorresgarcia.maptriage.MainActivity"
    android:background="@drawable/tri">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAP  TRIAGE"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:padding="10dp"
        android:id="@+id/tvTitulo"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="INGRESAR"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/ingresar"
        android:layout_alignStart="@+id/tvTitulo"
        android:layout_alignEnd="@+id/tvTitulo"
        android:layout_below="@+id/tvTitulo"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        tools:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        style="@style/Widget.AppCompat.ActionButton.CloseMode"
        android:textStyle="normal|bold"
        android:typeface="serif"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:text="REGISTRATE"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/reg"
        android:layout_marginBottom="83dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ingresar"
        android:layout_alignEnd="@+id/ingresar"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        tools:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        style="@style/Widget.AppCompat.ActionButton.CloseMode"
        android:textStyle="normal|bold"
        android:typeface="serif"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:backgroundTint="@color/colorAccent" />

</RelativeLayout>
